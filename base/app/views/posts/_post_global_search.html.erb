<% author = post.post_activity.sender_subject %>
<div class="model_with_details">
  <div class="logo">
    <%= link_to (image_tag(author.logo.url , :size => "50x50", :alt => author.name )), author  %>
  </div>
  <div class="sub-block">
    <div class="brief">
      <%= highlight(excerpt(strip_tags(post.text),get_search_query_words.first,:radius => 25),get_search_query_words) %>
      <br>
    </div>
  </div>
</div>