<section id="frontpage">
  <article class="left">
    <header>
      <h2>
        <% content_for :title do%>
          <%= t('welcome', :site => t('site.name')) %>
        <%end%>
      </h2>
    </header>
    <%= render :partial => 'layouts/search' %>
    <div class="thumbnail inline">
      <header>
        <h6>Busca usuarios, grupos, archivos...</h6>
      </header>
      <%= render :partial => 'frontpage/caracteristics' %>
    </div>
  </article>

  <article class="right">
    <div class="login">
      <h3 data-i18n="Log In">Log In</h3>
      <div id="headerFront">
        <div class="banner_top">
          <% unless params[:controller].eql? 'devise/sessions' and params[:action].eql? 'new' %>
          <div class="div_login">
            <%= form_for User.new, :as => :user, :url => user_session_path do |f| -%>
            <div id="login_data">
              <div class="login_data_block">
                <span><%= f.label :email %>
                </span>
                <%= f.email_field :email, :class => "input_username" %>
              </div>
              <div class="login_data_block">
                <span><%= f.label :password %>
                </span>
                <%= f.password_field :password, :class => "input_username" %>
              </div>
              
              <div class="login_data_block">
                <%= f.submit t(:sign_in), :class => 'btn pull-right'%>
              </div>
            </div>
            <hr class="soften">
            <div class="options">
              <%= link_to t('sign_up'), new_user_registration_path, :class => "register_link" %>
              <span>
                |
              </span>
              <%= link_to t('forgot_password'), new_user_password_path, :class => "register_link" %>
              <%= render :partial => "frontpage/social_networks" %>
            </div>
            <% end -%>
          </div>
          <% end %>
          <br class="clearfloat" />
        </div>
      </div> 
    </div>
  </article>
</section>






