    <div class="form_row">
      <div class="form_label">
        <%= f.label :current_password %>
      </div>
      <div class="form_field">
        <%= f.password_field :current_password, :class => "required form_tag" %>
      </div>
    </div>
    <div class="form_row space_center">
      <%= f.submit t('button.update'), :class => "button" %>
    </div>
    <% end%>
  </div>
</div>

