<section id="search" class="sub-content-full">
  <h4>
    <%= t 'explore.search.title' %>
  </h4>
  <div class="btn-group" data-toggle="buttons-checkbox">
      <button type="button" class="btn btn-primary">todo</button>
      <button type="button" class="btn btn-primary">usuarios</button>
      <button type="button" class="btn btn-primary">instituciones</button>
      <button type="button" class="btn btn-primary">publicaciones</button>
      <button type="button" class="btn btn-primary">comentarios</button>
      <button type="button" class="btn btn-primary">imagenes</button>
      <button type="button" class="btn btn-primary">videos</button>
      <button type="button" class="btn btn-primary">audios</button>
      <button type="button" class="btn btn-primary">ficheros</button>
    </div>
  <%= form_tag search_path, method: :get do %>
     <%= select_tag 'type', options_for_select(SocialStream::Search.options_for_type_select, params[:type]) %>

     <%= text_field_tag :q, params[:q], class: "input-xlarge", placeholder: t('explore.search.placeholder') %>
     <%= submit_tag t('explore.search.submit'), class: "btn btn-large" %>
  <% end %>

  <article id="search-results">
    <% @search_result.each do |r| %>
      <%= render partial: "#{ r.class.to_s.tableize }/search_result",
                 locals:  { r.class.to_s.underscore.to_sym => r }  %>
      <%= render :partial => 'activities/see-more' %>
    <% end %>
  </article>
</section>
