<div class="logo">
  <%= link_to(image_tag(contact.receiver.logo.url(:small)), contact.receiver_subject) %>
</div>

<div class="data">
  <div class="name">
    <%= link_to(truncate_name(contact.receiver_subject.name), contact.receiver_subject, :class => "contact_link") %>
    
    <div class="x">
      <%= link_to 'X', contact, :method => :delete, :remote => true %>
    </div>
  </div>

  <div class="info">
    <%= contact_brief(contact.receiver_subject) %>
  </div>
  <div class="add" id="contact_link<%= dom_id(contact.receiver_subject)%>">
    <%= contact_link(contact) %>
  </div>
</div>
 
  

