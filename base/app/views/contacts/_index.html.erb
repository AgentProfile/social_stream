<% cont=0; %>

<% @contacts.each do |contact| %>
    <% contact = contact.receiver.subject %>
  <% if (cont%2) == 0 %>
    <% cont+=1; %>

  <% end %>

  <div class="label">
    <div class="logo">
      <%= link_to image_tag(contact.logo.url , :size => "small", :alt => contact.name), contact %>
    </div>
    <div class="sub-block">
      <div class="name black" >
        <%=link_to(truncate_name(contact.name), contact)%>
      </div>
      <div class="link">
        <%= contact_to(contact) %>
      </div>
    </div>
  </div>
<% end %>

<% if ((cont%2) != 0) 	%>
  <div class="label">
  </div>

<% end %>


  <%= paginate @contacts %>

