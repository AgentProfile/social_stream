<div class="tags section">
  <header>
    <%= render partial: 'edit_icon' %>
    <h4>
      <%= t('profile.tags.other') %>
    </h4>
  </header>


  <div class="briefing">
    <% if @profile.subject.tag_list.count > 0 %>
      <%= @profile.subject.tag_list %>
    <% else %>
      <%= t('profile.empty') %>
    <% end %>
  </div>

  <% if can?(:update, @profile) %>
    <div class="update">
      <%= form_for(@profile, :url => [ @profile.subject, :profile ]) do |f| %>
        <%= f.select :tag_list, [] %>

        <%= f.submit %>
      <% end %>
    </div>
  <% end %>
</div>
