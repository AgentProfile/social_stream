<% toolbar %>

<article class="first-img">
  <header>
    <h1>
      Application
    </h1>
    Developers applications
    <%= link_to t('site.client.add'), new_site_client_path %>
    <hr class="soften">
  </header>

  <% @clients.each do |client| %>

    <img data-src="holder.js/40x40" alt="name application" style="width: 40px; height: 40px;" src="assets/user.png">
    <div class="name">
      <%= link_to client.name, client %>
    </div>
    <div class="url">
      <%= link_to client.url, client.url %>
    </div>
    <div class="users">
      <span>
        5
      </span>
      users
    </div>
  <hr class="soften">

<% end %>
