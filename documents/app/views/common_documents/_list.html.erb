<% documents.each do |document| %>
  <%= div_for document do %>
    <div class="thumb">
      <%= link_to thumb_for(document, 48), document, :title => document.file_file_name %>
    </div>

    <h4>
      <%= link_to truncate(document.title, :length => 15), document_path(document) %>
    </h4>

    <div class="author">
      <%= raw t('document.by', author: link_to(document.author.name, document.author_subject)) %>
    </div>

    <div class="actions">
      <span class="visit_count"> <%= t "document.view.n", count: document.visit_count %></span> /
      <span class="like_count"><%= t 'document.like.n', count: document.post_activity.likes.count %></span>
    </div>
  <% end %>
<% end %>
  

<%= javascript_tag do %>
$(function(){
  SocialStream.Repository.init();
});
<% end %>
