	    userStatus = "away";
			sendStatus(userStatus);
			clearTimeout(awayTimer);
	  } else {
	    userStatus = "chat";
	  }
}

function resumeAwayTimerIfAway(){
	  if (userStatus == "away"){
			awayCounter = 0;
			userStatus = "chat";
			sendStatus(userStatus);
			awayTimer = setInterval("awayTimerFunction()", awayTimerPeriod);
		}
}


