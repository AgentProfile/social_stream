<%= location(link_to(image_tag("btn/btn_config.png", :class => "btn_config")+t('account.one')+": "+t('account.settings')))%>
<br class="clearfloat" />
<div class="space_center">
</div>
<h2><%= t('account.settings')%></h2>
<div class="space_center">
</div>
<div class="block" id="notifications_settings">
    <div class="header">
        <div class="header_text">
            <%= t('settings.notifications.name')%>
        </div>
        <div class="header_icon_right">
            <%= link_to (image_tag('btn/edit.png')),  "javascript:showNotificationsSettings();" %>
        </div>
    </div>
    <div class="content" id="notifications_settings_briefing">        
        <div class="form_row">
            <%= t('settings.notifications.briefing')%>
        </div>
    </div>
    <div class="content" id="notifications_settings_content" style="display:none;">
        <%= form_tag settings_path, :method => :post do %>
        <ul>
        <div class="settings_block">
            <div class="form_row">
                <li><%= t('settings.notifications.by_email.name')%></li>
            </div>
            <div class="form_sub_row">
                <%= radio_button_tag 'notify_by_email', 'always', current_subject.notify_by_email %> <%= t('settings.notifications.by_email.always') %>
                <%= radio_button_tag 'notify_by_email', 'never', !current_subject.notify_by_email %> <%= t('settings.notifications.by_email.never') %>
            </div>
            <div class="actions center">
                <%= submit_tag "Update Settings", :name => :send_message, :class => "button" %>
            </div>
        </div>
        </ul>
        <% end %>
    </div>
</div>