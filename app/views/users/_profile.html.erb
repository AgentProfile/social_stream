<div class="space_center"></div>
<div class="block" id="personal_info" >
  <div class="header">
    <div class="header_text">
      <%=t('edit.personal_info')%>
    </div>
    <div class="header_icon_right">
      <%= link_to (image_tag('/images/btn/edit.png')),  :controller => "users" , :action => "edit" , :id => @profile.subject, :section => "about_me"%>
    </div>
  </div>
  <div class="content">
    <div class="sub-block"  >
      <% if @profile.organization? %>
        <div class="row">
          <div class="label">
            <%=t('edit.organization')%>:
          </div>
          <div class="field">
            <%=h @profile.organization %>
          </div>
        </div>
      <%end%>
      <% if @profile.birthday? %>
        <div class="row">
          <div class="label">
            <%=t('edit.birthday')%>:
          </div>
          <div class="field">
            <%=h I18n.l @profile.birthday, :format => :long %>
          </div>
        </div>
        <div class="row">
          <div class="label">
              Age:
          </div>
          <div class="field">
              <%=h @profile.subject.age %>
          </div>
        </div>
      <%end%>
      <% if @profile.city? %>
        <div class="row">
          <div class="label">
            <%=t('edit.actualcity')%>:
          </div>
          <div class="field">
            <%=h @profile.city %>
            <% if @profile.country? %>
              , <%=@profile.country%>
            <%end%>
          </div>
        </div>
      <%end%>
      <% if @profile.description? %>
        <div class="row">
          <div class="label">
            <%=t('edit.aboutme')%>:
          </div>
          <div class="row">
              <%=h @profile.description %>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>


