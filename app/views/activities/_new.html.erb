      <%= f.text_field :text, :id => "input_activities", :size => 85 %>

      <% if current_subject != receiver %>
        <% receiver.activity_relations(current_subject, :from => :receiver).each do |r| %>
          <%= f.hidden_field "_relation_ids][", :value => r.id %>
        <% end %>
      <% end %>

