      <% content_for :head do %>
          <%= stylesheet_link_tag "edit_user", :media => "screen, projection" %>          
        <% end %>       
      <div class="space_center"></div>

      <div class="block" id="personal_info" >
        <div class="header">
            <div class="header_text">
                Group Information
            </div>
            <div class="header_icon_right">
                <%= link_to (image_tag('/images/btn/edit.png')), :controller => :groups, :action => :edit, :section => :about_us %>
            </div>
        </div>
				<div class="content">
        
        	<% if @group.profile.organization? %>
			      <div class="row">
			        <div class="label">
			          Organization:
			        </div>
			        <div class="field">
			            <%=h @group.profile.organization %>
			        </div>
			      </div>
          <%end%>
					<% if @group.profile.city? %>
            <div class="row">
              <div class="label">
              City:
              </div>
	            <div class="field">
	              <%=h @group.profile.city %>
	              <% if @group.profile.country? %>
	                , <%=@group.profile.country%>
	              <%end%>
			        </div>
		        </div>
          <%end%>
          <% if @group.profile.description? %>
            <div class="row">
            	   <div class="label">
                    Description:
                </div>
                <div class="field">
                    <%=h @group.profile.description %>
                </div>
            </div>
          <%end%>
					<div class="row">
                <div class="label">
                    Group created at:
                </div>
                <div class="field">
                    <%=h h I18n.l @group.created_at, :format => :long %>
                </div>
          </div>
					<div class="row">
                <div class="label">
                    Group updated at:
                </div>
                <div class="field">
                    <%=h I18n.l @group.updated_at, :format => :long %>
                </div>
          </div>
				</div>
			</div>
			
					<div class="block" id="contact_info">
					  <div class="header">
					    <div class="header_text">
					      Contact Information
					    </div>
					    <div class="header_icon_right">
					      <%= link_to (image_tag('/images/btn/edit.png')), :controller => :groups, :action => :edit, :section => :contact_info %>
					    </div>
					  </div>
					  <div class="content">
					   <% if @group.profile.phone? %>
					     <div class="row">
					       <div class="label">
					         Phone
					       </div>
					       <div class="field">
					         <%=h @group.profile.phone %>
					       </div>
              </div>
            <%end%>
			      <% if @group.profile.mobile? %>
			        <div class="row">
			          <div class="label">
			            Mobile
			          </div>
			          <div class="field">
			            <%=h @group.profile.mobile %>
			          </div>
			        </div>
			      <%end%>
			      <% if @group.profile.fax? %>
			        <div class="row">
			          <div class="label">
			            Fax
			          </div>
			          <div class="field">
			            <%=h @group.profile.fax %>
			          </div>
			        </div>
			      <%end%>
			      <% if @group.profile.address? %>
			        <div class="row">
			          <div class="label">
			            Address
			          </div>
			          <div class="field">
			            <%=h @group.profile.address %>
			          </div>
			        </div>
			      <%end%>
			      <% if @group.profile.website? %>
			        <div class="row">
			          <div class="label">
			            Website
			          </div>
			          <div class="field">
			            <a href="<%=h @group.profile.website %>"><%=h @group.profile.website %></a>
			          </div>
			        </div>
			      <%end%>
			      <% if @group.email.present? %>
				      <div class="row">
				        <div class="label">
				          E-mail:
				        </div>
				        <div class="field">
				          <%=h @group.email %>
				        </div>
				      </div>
						<%end%>
          </div>
				
      </div>
    </div>
